<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PostStatusUpdate">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Status"
        android:id="@+id/buttonPostStatus"
        android:onClick="buttonPostStatus"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewRemainingCharacters" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStatusMessage"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:lines="5"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonPostStatus"
        android:layout_below="@+id/buttonPostStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="140"
        android:id="@+id/textViewRemainingCharacters"
        android:layout_alignBottom="@+id/editTextStatusMessage"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
