<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference
        android:key="username"
        android:summary="Enter the username"
        android:title="Username" />
    <EditTextPreference
        android:inputType="textPassword"
        android:key="password"
        android:summary="Enter the password"
        android:title="Password" />
    <EditTextPreference
        android:inputType="number"
        android:key="refresh_interval"
        android:summary="Server refresh interval in seconds"
        android:title="Refresh Interval" />
    <EditTextPreference
        android:inputType="textUri"
        android:key="server_uri"
        android:summary="Server URI"
        android:title="Server" />
</PreferenceScreen>